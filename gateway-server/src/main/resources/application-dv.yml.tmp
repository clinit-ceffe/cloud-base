management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      show-details: always

spring:
  cloud:
    nacos:
      discovery:
        server-addr: 127.0.0.1:8848
      config:
        server-addr:  127.0.0.1:884
    gateway:
      discovery:
        locator:
          #          enabled: true
          lowerCaseServiceId: true
      routes:
        - id: auth-server
          uri: lb://auth-server
          predicates:
            - Path=/auth/**
          filters:
            - name: Hystrix     # 熔断、降级配置
              args:
                name: fallbackcmd
                fallbackUri: forward:/fallback
            - name: RequestRateLimiter      # 限流配置
              args:
                key-resolver: '#{@ipKeyResolver}'     #限流策略
                redis-rate-limiter.replenishRate: 1   #令牌桶每秒填充平均速率。
                redis-rate-limiter.burstCapacity: 30   #令牌桶总容量。
            - StripPrefix=1
      zipkin:
        base-url: http://192.168.68.128:9411
        sender:
          type: web
      sleuth:
        sampler:
          probability: 1.0
  redis:
    host: 192.168.68.128
    port: 6379
    timeout: 6000ms  # 连接超时时长（毫秒）
    jedis:
      pool:
        max-active: 1000    # 连接池最大连接数（使用负值表示没有限制）
        max-wait: -1ms      # 连接池最大阻塞等待时间（使用负值表示没有限制）
        max-idle: 10        # 连接池中的最大空闲连接
        min-idle: 5         # 连接池中的最小空闲连接

feign:
  client:
    config:
      default:
        connectTimeout: 1000
        readTimeout: 1000
        loggerLevel: basic

hystrix:
  command:
    default:
      execution:
        isolation:
          thread:
            timeoutInMilliseconds: 5000



